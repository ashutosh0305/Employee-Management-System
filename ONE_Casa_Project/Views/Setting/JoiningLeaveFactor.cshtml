@model ONE_Casa_Project.Models.LeaveFactors

@{
    ViewData["Title"] = "JoiningLeaveFactor";
}

<h3>Joining Leave Factor</h3>
<button class="btn btn-primary margin_0 JobTitleAddButton" id="factorUpdate" onclick=JoiningLeaveFactorUpdate()>Update</button>
<button class="btn btn-primary margin_0 JobTitleAddButton" id="factorEdit" onclick=JoiningLeaveFactorEdit()>Edit</button>
<button class="btn btn-primary margin_0 JobTitleAddButtoncancel" style="margin-right:-153px;" id="factorcancel" onclick=JoiningLeaveFactorCancel()>Cancel</button>
<table class="table" style="background-color: white;margin: auto;width: 90vw;">
    <thead class="table-dark">
        <tr>
            <th>
                From Day
            </th>
            <th>
                To Day
            </th>
            <th>
                Leave Factor
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                1
            </td>
            <td>
                <input type="number" value="@Model.To1" id="to1" name="TO1" disabled />
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Factor1) Day
            </td>
        </tr>
        <tr>
            <td>
                <input type="number" value="@Model.From2"  id="from2" disabled />
            </td>
            <td>
                <input type="number" value="@Model.To2" id="to2" disabled />
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Factor2) Day
            </td>
        </tr>
        <tr>
            <td>
                <input type="number" value="@Model.From3" id="from3" disabled />
            </td>
            <td>
                <input type="number" value="@Model.To3" id="to3" disabled />
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Factor3) Day
            </td>
        </tr>
        <tr>
            <td>
                <input type="number" value="@Model.From4" id="from4" disabled />
            </td>
            <td>
                30
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Factor4) Day
            </td>
        </tr>

    </tbody>
</table>